<% content_for :page_title do %>
  <%= Spree.t(:listing_nav_links) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:new_nav_link), new_object_url, icon: 'plus', id: 'admin_new_nav_link_link' %>
  </li>
<% end %>

<table class="index sortable" id="listing_nav_links" data-hook data-sortable-link="<%= update_positions_admin_nav_links_url %>">
  <colgroup>
    <col style="width: 10%">
    <col style="width: 75%">
    <col style="width: 15%">
  </colgroup>
  <thead>
    <tr data-hook="admin_nav_links_index_headers">
      <th class="no-border"></td>
      <th><%= t(:name, scope: 'activerecord.attributes.spree/nav_link') %></th>
      <th data-hook="admin_nav_links_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @nav_links.each do |nav_link| %>
      <tr id="<%= spree_dom_id nav_link %>" data-hook="admin_nav_links_index_rows" class="<%= cycle('odd', 'even')%>">
        <td class="no-border"><span class="handle"></span></td>
        <td><%= link_to nav_link.name, edit_object_url(nav_link) %></td>
        <td data-hook="admin_nav_links_index_row_actions" class="actions">
          <%= link_to_edit nav_link, no_text: true %>
          <%= link_to_delete nav_link, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @nav_links %>
