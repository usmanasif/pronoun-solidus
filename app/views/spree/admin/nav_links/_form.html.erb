<div data-hook="admin_nav_link_form_fields" class="row">
  <div class="twelve columns">
    <%= f.field_container :name do %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'fullwidth' %>
      <%= error_message_on :nav_link, :name %>
    <% end %>
    <%= f.field_container :url do %>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'fullwidth' %>
      <%= error_message_on :nav_link, :url %>
    <% end %>
    <%= f.field_container :active do %>
      <%= f.label :active %>
      <%= f.check_box :active, class: 'fullwidth' %>
      <%= error_message_on :nav_link, :active %>
    <% end %>
  </div>
</div>
